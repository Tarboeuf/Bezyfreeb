<Window x:Class="BezyFB.Configuration.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:BezyFB.Helpers"
        xmlns:configuration="clr-namespace:BezyFB.Configuration"
        mc:Ignorable="d"
        Title="Password" Height="300" Width="300"
        d:DataContext="{d:DesignInstance configuration:PasswordForm}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <PasswordBox PasswordChar="*" MinWidth="200"
                                     helpers:PasswordHelper.Attach="True"
                                     helpers:PasswordHelper.Password="{Binding Pwd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button Content="Ok" Click="Ok_Click"></Button>

                <Button Content="Annuler" Click="Cancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>